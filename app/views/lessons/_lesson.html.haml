.card
  .card-header
    = link_to lesson.title, lesson
  .card-body
    .row
      = lesson.content
    .row
      = lesson.course
  .card-footer
    = link_to 'Edit', edit_lesson_path(lesson), class: 'btn btn-sm btn-outline-warning'
    = link_to 'Remove', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger'
