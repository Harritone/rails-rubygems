.card.mb-2
  .card-header
    = link_to lesson.title, lesson
  -if policy(lesson).show?
    .card-body
      .row
        = lesson.content
      .row
        = lesson.course
  - if policy(lesson).edit?
    .card-footer
      = link_to 'Edit', edit_lesson_path(lesson), class: 'btn btn-sm btn-outline-warning' if policy(lesson).edit?
      = link_to 'Remove', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' if policy(lesson).destroy?
