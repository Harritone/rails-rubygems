%ol.breadcrumb
  %li.breadcrumb-item
    = link_to 'Home', root_path
  %li.breadcrumb-item
    = link_to 'Courses', courses_path
  %li.breadcrumb-item
    = @course.title

.row.mb-2
  .col-lg-6
  .col-lg-6
    = link_to 'Add lesson', new_course_lesson_path(@course, @lesson), class: 'btn btn-sm btn-outline-primary form-control'
.row
  .col-lg-6
    .card.text-center
      = render 'course', course: @course
  .col-lg-6
    - @lessons.each do |lesson|
      = render 'lessons/lesson', lesson: lesson
