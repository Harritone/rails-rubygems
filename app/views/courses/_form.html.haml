= simple_form_for(@course) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.label :description
    = f.input :description, as: :rich_text_area
    = f.input :short_description
    = f.input :language, collection: %w(English Russian Polska French), default: 1
    = f.input :level, collection: %w(Beginner Medium Advanced), default: 1
    = f.input :price, input_html: { min: '0', step: 'any' }

  .form-actions
    = f.button :submit, class: 'btn btn-success mt-4'
